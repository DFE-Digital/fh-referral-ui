@model FamilyHubs.ReferralUi.Ui.Models.ICookieBannerViewModel

<div class="govuk-cookie-banner govuk-visually-hidden" data-nosnippet="" role="region" aria-label="Cookies on [name of service]">
    <div class="govuk-cookie-banner__message govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h2 class="govuk-cookie-banner__heading govuk-heading-m">Cookies on Connect families to support</h2>
                <div class="govuk-cookie-banner__content">
                    <p class="govuk-body">We use some essential cookies to make this service work.</p>
                    <p class="govuk-body">We’d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
                </div>
            </div>
        </div>
        <div class="govuk-button-group">
            <button id="cookies-banner-accept" value="accept" type="button" name="cookies" class="govuk-button" data-module="govuk-button">
                Accept analytics cookies
            </button>
            <button id="cookies-banner-reject" value="reject" type="button" name="cookies" class="govuk-button" data-module="govuk-button">
                Reject analytics cookies
            </button>
            <a class="govuk-link" href="/ProfessionalReferral/Cookies">View cookies</a>
        </div>
    </div>

    <div class="govuk-cookie-banner__confirmation govuk-width-container govuk-visually-hidden" tabindex="-1">
        <p class="govuk-cookie-banner__confirmation-message" role="alert">
            <span class="govuk-cookie-banner__confirmation-message__accepted govuk-visually-hidden">You have accepted additional cookies. </span>
            <span class="govuk-cookie-banner__confirmation-message__rejected govuk-visually-hidden">You have rejected additional cookies. </span>
            You can <a class="govuk-link" href="/ProfessionalReferral/Cookies" >change your cookie settings</a> at any time.
        </p>
        <div class="govuk-button-group">
            <button id="cookies-banner-close" class="govuk-button">Hide this message</button>
        </div>
    </div>
</div>