@page
@model FamilyHubs.ReferralUi.Ui.Pages.ProfessionalReferral.SearchModel
@{
}

<a asp-page="/ProfessionalReferral/SignIn" class="govuk-back-link">Back</a>
<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
          <div class="govuk-form-group @(Model.PostcodeValid == false ? "govuk-form-group--error" : "")">
    <h1 class="govuk-heading-l">Search for services by postcode</h1>
    <p class="govuk-details">
        We will use the postcode you enter to find services in that local authority area. The postcode must be in England.
    </p>
     @{
        if (Model.PostcodeValid == false)
        {
            <p class="govuk-error-message">
                <span class="govuk-visually-hidden" data-testid="empty-error">Error:</span> There is a problem. You need to enter a postcode. Enter a postcode for example SW1A 2AA
            </p>
        }
    }
     @{
        if (Model.ValidationValid == false)
        {
            <p class="govuk-error-message">
                <span class="govuk-visually-hidden" data-testid="invalid-error">Error:</span> There is a problem. Your postcode is not recognised - try another one
            </p>
        }
    }
    <form method="post">
         <div class="govuk-form-group" id="search-options">
  <h1 class="govuk-label-wrapper"><label class="govuk-label govuk-label--l" for="account-number">
     Enter a postcode
    </label>
  </h1>
  <div id="account-number-hint" class="govuk-hint">
    For example SW1A 2AA
  </div>
   <input class="govuk-input govuk-input--width-10" id="Postcode" name="Postcode" type="text" spellcheck="false"  inputmode="numeric" value="@Model.Postcode" data-testid="postcode-value">
 </div>
 <br><br>
   <button type="submit" class="govuk-button" data-testid="button-search">
        Search
      </button>
    </form>
   
</div>
          </div>
           
</div>
</main>

