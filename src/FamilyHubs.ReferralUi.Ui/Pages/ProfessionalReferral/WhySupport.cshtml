@page
@model FamilyHubs.ReferralUi.Ui.Pages.ProfessionalReferral.WhySupportModel
@{
}

<a asp-page="/ProfessionalReferral/ContactDetails"  class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <h1 class="govuk-heading-l">Details about the family</h1>
    <form method="post">

      <div class="govuk-form-group">
          <div class="govuk-form-group @(Model.ValidationValid == false ? "govuk-form-group--error" : "")">

                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="500">
                    <p>Use this to give the service details about the family, for example: </p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>why the family needs help</li>
                        <li>any health conditions or special educational needs and disabilities (SEND)</li>
                        <li>times of the day to contact the family</li>
                    </ul>

                    <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="500">
                        <div class="govuk-form-group">
                            <h1 class="govuk-label-wrapper">
                                <label class="govuk-label govuk-label--m" for="with-hint">
                                    What do you want to tell the service?
                                </label>
                            </h1>

                            @{
                                if (Model.ValidationValid == false)
                                {
                                    <p class="govuk-error-message">
                                        <span class="govuk-visually-hidden">Error:</span> You must enter a Reason For Support
                                    </p>
                                }
                            }

                            <textarea asp-for="ReasonForSupport" class="govuk-textarea govuk-js-character-count" rows="10" id="with-hint" ></textarea>
                        </div>

                        <div id="with-hint-info" class="govuk-hint govuk-character-count__message">
                            You can enter up to 500 characters
                        </div>

                    </div>
                </div>
        </div>
      </div>
      <button type="submit" class="govuk-button">
        Continue
      </button>
    </form>

</main>