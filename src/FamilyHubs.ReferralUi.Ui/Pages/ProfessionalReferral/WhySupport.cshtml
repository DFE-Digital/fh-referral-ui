@page
@model FamilyHubs.ReferralUi.Ui.Pages.ProfessionalReferral.WhySupportModel
@{
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <form method="post">


        <input asp-for="@Model.Id" type="hidden" >
        <input asp-for="@Model.Name" type="hidden">
        <input asp-for="@Model.FullName" type="hidden" >
        <input asp-for="@Model.HasSpecialNeeds" type="hidden">
        <input asp-for="@Model.Email" type="hidden" >
        <input asp-for="@Model.Phone" type="hidden">

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="500">
            <div class="govuk-form-group">
              <h1 class="govuk-label-wrapper">
                <label class="govuk-label govuk-label--l" for="ReasonForSupport">
                Why does this person or family need support from this service?
              </label>
              </h1>
              <textarea class="govuk-textarea govuk-js-character-count" id="ReasonForSupport" name="ReasonForSupport" value="@Model.ReasonForSupport" asp-for="ReasonForSupport" rows="10"></textarea>
            </div>

            <div id="with-hint-info" class="govuk-hint govuk-character-count__message">
              You can enter up to 500 characters
            </div>

          </div>
        </fieldset>
      </div>
      <button type="submit" class="govuk-button">
        Continue
      </button>
    </form>

</main>