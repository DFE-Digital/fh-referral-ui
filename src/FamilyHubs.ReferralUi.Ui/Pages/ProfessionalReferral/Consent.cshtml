@page
@model FamilyHubs.ReferralUi.Ui.Pages.ProfessionalReferral.ConsentModel
@{
}

<a asp-page="/ProfessionalReferral/Safeguarding" asp-route-id="@Model.Id" asp-route-name="@Model.Name" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <form method="post">
      <div class="govuk-form-group">
          <div class="govuk-form-group @(Model.ValidationValid == false ? "govuk-form-group--error" : "")">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
               Consent
            </h1>
          </legend>
              @{
                    if (Model.ValidationValid == false)
                    {
                        <p class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> You must select one of the options
                        </p>
                    }
                }
          <p>You must have consent from the family to give their details to the service.</p>
          <p class="govuk-body">Those details include:</p>
            <ul class="govuk-list govuk-list--bullet">
              <li>who to contact in the family</li>
              <li>ways to contact the family</li>
              <li>why the family needs help </li>
            </ul>
            <p>You can come back and connect the family to the service once you have consent.</p>
            <h2 class="govuk-heading-m">
                Do you have consent from the family?
            </h2>
          <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
            <div class="govuk-radios__item">
                  <input class="govuk-radios__input" id="consent" name="IsConsentGiven" type="radio" value="yes" @(Model.IsConsentGiven != null && Model.IsConsentGiven == "yes" ? "checked" : "")>
              <label class="govuk-label govuk-radios__label" for="consent">
                Yes
              </label>
            </div>
            <div class="govuk-radios__item">
                  <input class="govuk-radios__input" id="consent-2" name="IsConsentGiven" type="radio" value="no" @(Model.IsConsentGiven != null && Model.IsConsentGiven == "no" ? "checked" : "")>
              <label class="govuk-label govuk-radios__label" for="consent-2">
                No
              </label>
            </div>
          </div>

        </fieldset>
      </div>
      </div>
        <button type="submit" class="govuk-button" asp-route-id="@Model.Id" asp-route-name="@Model.Name" asp-route-referralId="@Model.ReferralId">
        Continue
      </button>
    </form>

</main>