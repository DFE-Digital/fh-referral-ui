@page
@model FamilyHubs.ReferralUi.Ui.Pages.ProfessionalReferral.ContactDetailsModel
@{
}


<main class="govuk-main-wrapper " id="main-content" role="main">

     <form method="post">

         <input asp-for="@Model.Id" type="hidden" >
         <input asp-for="@Model.Name" type="hidden">
         <input asp-for="@Model.FullName" type="hidden" >
         <input asp-for="@Model.HasSpecialNeeds" type="hidden">

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              Contact details
            </h1>
          </legend>
          <p>If you are requesting support for a child or a family, enter details of a parent or carer.</p>
          <div class="govuk-form-group">
            <label class="govuk-label" for="Email">
              Email address
            </label>
            <input class="govuk-input" id="Email" name="Email" value="@Model.Email" asp-for="Email"  type="email" spellcheck="false" autocomplete="Email">
          </div>
          <div class="govuk-form-group">
            <label class="govuk-label" for="Phone">
              UK telephone number
            </label>
            <input class="govuk-input govuk-input--width-20" id="Phone" name="Phone" value="@Model.Phone" asp-for="Phone" type="tel" autocomplete="Phone">
          </div>
        </fieldset>
      </div>
      <button type="submit" class="govuk-button">
        Continue
      </button>
    </form>

</main>