@page
@model IndexModel
@{
    ViewData["Title"] = "Connect families to support";
}

<main class="govuk-main-wrapper custom-main" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l" data-testid="heading">
                Connect families to support
            </h1>
            <p class="govuk-body">
                This is for people working with children, young people and families.
            </p>
            <p class="govuk-body">
                Use this service to find voluntary and community services to support the families you work with.
            </p>

            <div class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-warning-text__assistive">Warning</span>
                    Do not use this service<a class="govuk-link" href="https://www.gov.uk/report-child-abuse" data-testid="child-abuse-link"> if you're worried that a child or young person is at risk or is being abused.</a>
                </strong>
            </div>
            <p>You can use this service to find:</p>
            <ul class="govuk-list govuk-list--bullet" data-testid="list-id">
                <li>support services local to a family</li>
                <li>contact details to contact a support service on a family' s behalf</li>
                <li>contact details to share with a family to contact a support service themselves</li>
            </ul>

            <p class="govuk-!-margin-bottom-5">The service will contact the family if they can help.</p>

            @if (Model.IsReferralEnabled)
            {
                <a asp-page="/ProfessionalReferral/SignIn" class="govuk-button govuk-button--start" data-testid="button-start">
                    Start now
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                    </svg>
                </a>
            }
            else
            {
                <a asp-page="/ProfessionalReferral/Search" class="govuk-button govuk-button--start" data-testid="button-start">
                    Start now
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                    </svg>
                </a>    
            }
            

        </div>
    </div>
</main>

