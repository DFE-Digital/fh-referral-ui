@page
@model FamilyHubs.Referral.Web.Pages.ProfessionalReferral.SafeguardingModel

@section Back {
    <a asp-page="/ProfessionalReferral/LocalOfferDetail" asp-route-id="@Guid.NewGuid().ToString()" asp-route-serviceId="@Model.Id" asp-route-name="@Model.Name" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="interrupt-panel">
            <h1 class="govuk-heading-l">
                Do not use this service to report safeguarding concerns
            </h1>
            <p>Use the <a href="https://nhssafeguarding.app/?nocache=0.23461449202295054" id="nhs-safeguarding" class="govuk-link--inverse">NHS safeguarding app</a> for guidance on reporting safeguarding concerns.</p>
        </div>

        <form method="post" novalidate data-validate='my-form-validation'>
            <div class="govuk-form-group">

                <button class="govuk-button govuk-!-margin-top-6">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>
