@page
@model SafeguardingModel
@{
    ViewData["Title"] = "Safeguarding";
}

@section Back {
    <a href="@Model.BackUrl" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="interrupt-panel">
            <h1 class="govuk-heading-l">
                Do not use this service to report safeguarding concerns
            </h1>
            <p>Use the <a href="https://nhssafeguarding.app" rel="noreferrer noopener" target="_blank" id="nhs-safeguarding" class="govuk-link--inverse">NHS safeguarding app (opens in new tab)</a> for guidance on reporting safeguarding concerns.</p>
            <a asp-page="/ProfessionalReferral/Consent" class="govuk-button app-button--inverted" data-module="govuk-button"
               asp-route-serviceId="@Model.ServiceId">
                Continue
            </a>
        </div>
    </div>
</div>
