@page
@model FamilyHubs.Referral.Web.Pages.ProfessionalReferral.ContactDetailsModel
@{
    ViewData["Title"] = $"How can the service contact {Model.FullName}?";
}

@section Back {
    <a asp-page="/ProfessionalReferral/WhySupport" asp-route-serviceId="@Model.ServiceId" asp-route-serviceName="@Model.ServiceName" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (!Model.ValidationValid)
        {
            <div class="govuk-error-summary" data-module="govuk-error-summary">
                <div role="alert">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            <li>
                                <a href="#contact-methods" data-testid="summary-error">Select a contact method</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        <form method="post">
            <div class="govuk-form-group  @(Model.ValidationValid ? "" : "govuk-form-group--error")">
                <fieldset class="govuk-fieldset" aria-describedby="hint @(Model.ValidationValid ? "" : "error")">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            How can the service contact @Model.FullName?
                        </h1>
                    </legend>
                    <div id="hint" class="govuk-hint">
                        Select all that apply.
                    </div>
                    @if (!Model.ValidationValid)
                    {
                        <p id="error" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> Select a contact method
                        </p>
                    }
                    <div id="contact-methods" class="govuk-checkboxes" data-module="govuk-checkboxes">
                        <div class="govuk-checkboxes__item">
                            <input asp-for="Email" class="govuk-checkboxes__input" type="checkbox">
                            <label asp-for="Email" class="govuk-label govuk-checkboxes__label">
                                Email
                            </label>
                        </div>
                        <div class="govuk-checkboxes__item">
                            <input asp-for="Telephone" class="govuk-checkboxes__input" type="checkbox">
                            <label asp-for="Telephone" class="govuk-label govuk-checkboxes__label">
                                Telephone
                            </label>
                        </div>
                        <div class="govuk-checkboxes__item">
                            <input asp-for="Textphone" class="govuk-checkboxes__input" type="checkbox">
                            <label asp-for="Textphone" class="govuk-label govuk-checkboxes__label">
                                Text message
                            </label>
                        </div>
                        <div class="govuk-checkboxes__item">
                            <input asp-for="Letter" class="govuk-checkboxes__input" type="checkbox">
                            <label asp-for="Letter" class="govuk-label govuk-checkboxes__label">
                                Letter
                            </label>
                        </div>
                    </div>
                </fieldset> 
            </div>
            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>
        </form>
    </div>
</div>
