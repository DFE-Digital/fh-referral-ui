@model FamilyHubs.Referral.Core.Models.PartialTextBoxViewModel
<!-- This control can only be used when there are no other inputs on the page -->
@if (Model.ValidationValid == false)
{
    <div class="govuk-error-summary" data-module="govuk-error-summary">
        <div role="alert">
            <h2 class="govuk-error-summary__title" id="@Model.ErrorId">
                There is a problem
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                    <li>
                        <a href="#TextBoxValue" data-testid="enter-service-name-error">@Model.MainErrorText</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}


<div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
        <label class="govuk-label govuk-label--l" for="event-name">
            @Model.HeadingText
        </label>
    </h1>
    @if (!string.IsNullOrEmpty(Model.HintText))
    {
        <div id="event-name-hint" class="govuk-hint">
            @Model.HintText
        </div>
    }
    <div class="@(Model.ValidationValid == false ? "govuk-form-group--error" : "")">
        @if (Model.ValidationValid == false)
        {
            <p class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> @Model.TextBoxErrorText
            </p>
        }
        <label class="govuk-label" for="TextBoxValue">
            @Model.TextBoxLabel
        </label>
        <input class="govuk-input @(Model.ValidationValid == false ? "govuk-input--error" : "")" type="text" spellcheck="false" autocomplete="TextBoxValue" id="TextBoxValue" name="TextBoxValue" value="@Model.TextBoxValue" asp-for="TextBoxValue">
    </div>
</div>
<button type="submit" class="govuk-button" data-module="govuk-button">
    Continue
</button>

